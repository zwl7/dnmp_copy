.news_box {
  box-shadow: 0rpx 10rpx 12rpx 0rpx #efefef;
  border-radius: 12rpx;
}
.component-container {
  width: 100%;
  box-sizing: border-box;
  padding: 28rpx;
  background-color: #fff;
}
.news_container {
  width: 100%;
  margin-top: 26rpx;
}
.news_container .new_item {
  display: flex;
  align-items: flex-start;
  justify-content: space-between;
  overflow: hidden;
  height: 148rpx;
}
.news_container .new_item:not(:last-child) {
  padding-bottom: 22rpx;
  margin-bottom: 22rpx;
  border-bottom: 2rpx solid #f6f6f6;
}
.news_container .new_item .left_news {
  flex: 1;
  width: -webkit-fit-content;
  width: fit-content;
  height: 100%;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.news_container .new_item .left_news .title {
  font-family: PingFangSC-Regular;
  font-size: 28rpx;
  color: #000000;
  letter-spacing: 0;
  font-weight: 400;
  overflow: hidden;
  -webkit-line-clamp: 2;
  line-clamp: 2;
  -webkit-box-orient: vertical;
  box-orient: vertical;
  overflow: hidden;
  display: -webkit-box;
  height: -webkit-fit-content;
  height: fit-content;
  margin-bottom: 10rpx;
}
.news_container .new_item .left_news .bottom_info {
  display: flex;
  align-items: center;
  justify-content: space-between;
  color: #646464;
  font-size: 24rpx;
}
.news_container .new_item .left_news .status_btn {
  font-size: 24rpx;
  background-color: #fef2ea;
  color: #f14d3a;
  padding: 0 16rpx;
  border-radius: 16rpx;
}
.news_container .new_item .padLeft {
  padding-left: 50rpx;
}
.news_container .new_item .padRight {
  padding-right: 50rpx;
}
.news_container .new_item .right_news {
  flex: 0 0 228rpx;
  height: 100%;
  border-radius: 10rpx;
  position: relative;
  border-radius: 12rpx;
  overflow: hidden;
}
.news_container .new_item .right_news .image {
  display: block;
  width: 100%;
  height: 148rpx;
  object-fit: cover;
}
.news_container .new_item .right_news .tips {
  max-width: 100%;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  position: absolute;
  top: 0;
  left: 0;
  color: #f6f6f6;
  z-index: 8;
  font-size: 24rpx;
  padding: 4rpx 6rpx;
  background-color: rgba(0, 0, 0, 0.3);
}
.news_container .new_item .right_news .tips1 {
  right: auto;
  border-bottom-right-radius: 10rpx;
}
.news_container .new_item .right_news .tips2 {
  left: auto;
  right: 0;
  border-bottom-left-radius: 10rpx;
}
.news_container .new_item .right_news .tips3 {
  top: auto;
  bottom: 0 !important;
  width: 100%;
  text-align: center;
}