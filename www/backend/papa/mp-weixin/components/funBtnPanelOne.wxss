.grid-func {
  display: flex;
  justify-content: space-between;
  flex-direction: row;
  flex-wrap: wrap;
  padding: 28rpx;
  text-align: center;
}
.button-title {
  font-size: 28rpx;
  color: black;
  font-weight: 500;
}
.menu-icon {
  width: 80rpx;
  height: 80rpx;
}
.functions {
  width: 100%;
  display: flex;
  overflow: auto;
  overflow-y: none;
  border-radius: 12rpx;
  position: relative;
}
.functions .row-one {
  margin-bottom: 36rpx;
}
.functions .row-one,
.functions .row-two {
  display: flex;
  padding: 0 26rpx 0 26rpx;
}
.functions .row-one .menu,
.functions .row-two .menu {
  display: inline-block;
  text-align: center;
}
.functions .row-one .menu .menu-title,
.functions .row-two .menu .menu-title {
  font-family: PingFangSC-Regular;
  text-align: center;
  width: 120rpx;
}
.menu-title {
  margin-top: 12rpx;
}
.functions::-webkit-scrollbar {
  display: none;
}
.navabar {
  width: 100%;
  height: 10rpx;
  position: absolute;
  bottom: 10rpx;
  left: 0;
  display: flex;
  align-items: center;
  justify-content: center;
}
.navabar .navbarwrap {
  height: 100%;
  width: 100rpx;
  background-color: #ccc;
  border-radius: 4rpx;
  overflow: hidden;
}
.navabar .navbaritem {
  width: 40rpx;
  height: 100%;
  background-color: var(#e05830);
  border-radius: 4rpx;
}
.vertical_menu {
  display: flex;
  flex-wrap: wrap;
  flex-direction: row;
  padding-top: 28rpx;
  background-color: white;
  box-shadow: 0rpx 10rpx 12rpx 0rpx #efefef;
  border-radius: 12rpx;
}
.vertical_menu .menu_item {
  width: 25%;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  margin-bottom: 28rpx;
}
.vertical_menu .menu_item .menu {
  text-align: center;
}