.parent-card {
  border-radius: 12rpx;
  line-height: 44rpx;
  padding: 26rpx;
  background-color: #fff;
}
.tabs-title {
  font-weight: 700;
  line-height: 44rpx;
  margin-bottom: 22rpx;
  padding-left: 28rpx;
}
.cards {
  width: 100%;
  overflow: auto;
  display: flex;
  border-radius: 12rpx;
  margin-top: 26rpx;
}
.cards::-webkit-scrollbar {
  display: none;
}
.cards .van-swipe-item {
  position: relative;
  color: #fff;
  text-align: center;
  border-radius: 12rpx;
  width: 300rpx;
  height: 160rpx;
  margin-right: 20rpx;
  flex-shrink: 0;
}
.cards .van-swipe-item .image {
  position: absolute;
  border-radius: 12rpx;
  display: block;
  top: 0;
  left: 0;
  width: 300rpx;
  height: 160rpx;
  object-fit: cover;
  z-index: 4;
}
.cards .van-swipe-item .remark {
  font-family: PingFangSC-Medium;
  position: absolute;
  width: 100%;
  bottom: 20rpx;
  left: 50%;
  transform: translateX(-50%);
  z-index: 5;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  font-size: 28rpx;
  color: white;
  font-weight: 400;
  text-align: center;
  bottom: 0rpx;
  background: linear-gradient(0, rgba(0, 0, 0, 0.5) 0%, rgba(0, 0, 0, 0) 100%);
}
.tag {
  position: absolute;
  top: 0;
  left: 0;
  z-index: 10;
  font-size: 24rpx;
  padding: 0 24rpx;
  background-color: #e05830;
  border-radius: 12rpx 0 12rpx 0;
  max-width: 100%;
  box-sizing: border-box;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}