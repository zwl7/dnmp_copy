.component-container {
  width: 100%;
  box-sizing: border-box;
  padding: 28rpx;
  background-color: #fff;
}
.title {
  font-family: PingFangSC-Medium;
  font-size: 28rpx;
  color: #121212;
  letter-spacing: 0;
  font-weight: 500;
}
.sub-title {
  font-family: PingFangSC-Medium;
  font-size: 24rpx;
  color: #666;
  letter-spacing: 0;
  font-weight: 500;
}
.ad_container {
  height: 252rpx;
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.ad_container .left,
.ad_container .right {
  height: 100%;
}
.ad_container .left text,
.ad_container .right text,
.ad_container .one_left text,
.ad_container .one_right text {
  font-family: PingFangSC-Medium;
  font-size: 28rpx;
  color: #121212;
  letter-spacing: 0;
  font-weight: 500;
}
.ad_container .left text,
.ad_container .right text,
.ad_container .one_left text,
.ad_container .one_right text {
  font-family: PingFangSC-Regular;
  padding-top: 6rpx;
  font-size: 20rpx;
  color: #666666;
  letter-spacing: 0;
  font-weight: 400;
}
.ad_container .left,
.ad_container .one_left,
.ad_container .one_right {
  width: 43.5%;
  box-sizing: border-box;
  background: center;
  background-repeat: no-repeat;
  background-size: cover;
  overflow: hidden;
  padding: 40rpx 20rpx;
  background-color: #fff;
  box-shadow: 0rpx 10rpx 12rpx 0rpx #efefef;
  border-radius: 12rpx;
}
.ad_container .right {
  width: 53.1%;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.ad_container .right .col-1,
.ad_container .right .col-2 {
  height: 116rpx;
  width: 100%;
  background: center;
  background-repeat: no-repeat;
  background-size: cover;
  box-sizing: border-box;
  padding: 16rpx 14rpx;
  overflow: hidden;
  box-shadow: 0rpx 10rpx 12rpx 0rpx #efefef;
  border-radius: 12rpx;
}
.ad_container .right .col-1 text,
.ad_container .right .col-2 text {
  padding-right: 30rpx;
  word-wrap: break-word;
}
.ad_container .one_left,
.ad_container .one_right {
  flex: 1;
  height: 100%;
}
.ad_container .one_left {
  margin-right: 16rpx;
}
.ad_container .one_right {
  margin-left: 16rpx;
}
.one_container {
  width: 100%;
  height: 100%;
  padding: 56rpx 26rpx;
  background-color: #fff;
  background: center;
  background-repeat: no-repeat;
  background-size: cover;
  background-image: linear-gradient(180deg, #fbece6 0%, #f9d7d4 100%);
  box-shadow: 0rpx 10rpx 12rpx 0rpx #efefef;
  border-radius: 12rpx;
  box-sizing: border-box;
}