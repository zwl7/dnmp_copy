
.van-dropdown-menu__bar {
		position: relative;
		display: flex;
		height: 96rpx;
		background-color: #fff;
		box-shadow: 0 4rpx 24rpx rgba(100, 101, 102, 0.12);
}
.dropdown-menu {
		display: flex;
		align-items: center;
		justify-content: space-between;
		width: 100%;
		height: 96rpx;
}
.van-ellipsis {
		overflow: hidden;
		white-space: nowrap;
		text-overflow: ellipsis;
}
.van-dropdown-menu__item {
		display: flex;
		flex: 1;
		align-items: center;
		justify-content: center;
		min-width: 0;
}
.van-dropdown-menu__title {
		position: relative;
		box-sizing: border-box;
		max-width: 100%;
		padding: 0 16rpx;
		color: #323233;
		font-size: 30rpx;
		line-height: 44rpx;
		display: flex;
		align-items: center;
}
.box {
		position: relative;
		overflow: hidden;
}
.icon {
		transform: rotate(180deg);
}
.van-cell {
		position: relative;
		display: flex;
		box-sizing: border-box;
		width: 100%;
		padding: 20rpx 32rpx;
		overflow: hidden;
		color: #323233;
		font-size: 28rpx;
		line-height: 48rpx;
		background-color: #fff;
}
.van-cell::after {
		position: absolute;
		box-sizing: border-box;
		content: ' ';
		pointer-events: none;
		right: 32rpx;
		bottom: 0;
		left: 32rpx;
		border-bottom: 2rpx solid #ebedf0;
		transform: scaleY(0.5);
}
.van-cell__title,
	.van-cell__value {
		flex: 1;
}
.van-cell__value {
		text-align: right;
}
.van-cell-active {
		color: var(--dropdownThemeColor);
}
.dropdown-footer {
		display: flex;
		align-items: center;
		padding: 10rpx 0;
}
.dropdown-cancel,
	.dropdown-confirm {
		flex: 1;
		margin: 0 20rpx;
		height: 60rpx;
		border-radius: 60rpx;
		text-align: center;
		line-height: 60rpx;
		font-size: 28rpx;
}
.dropdown-cancel {
		border: 2rpx solid var(--dropdownThemeColor);
		box-sizing: border-box;
		color: #323233;
}
.dropdown-confirm {
		background-color: var(--dropdownThemeColor);
		color: #fff;
}
	
