.movableArea {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 190vh;
  pointer-events: none;
}
.movableView {
  width: 100vw;
  height: 100vh;
  background: #fff;
  pointer-events: auto;
  border-radius: 40rpx 40rpx 0 0;
}
.drag-indicator {
  width: 80rpx;
  height: 8rpx;
  background: #E0E0E0;
  border-radius: 4rpx;
  margin: 16rpx auto;
}
.scroll-Y {
  height: calc(100% - 150rpx);
  box-sizing: border-box;
}
.footer-view {
  height: calc(120rpx + env(safe-area-inset-bottom));
}