page {
  background: #f6f6f6;
}
.scroll-Y {
  height: calc(100% - 150rpx);
  box-sizing: border-box;
}
.movableArea {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 190vh;
  pointer-events: none;
}
.movableView {
  width: 100vw;
  height: 100vh;
  background: #fff;
  pointer-events: auto;
  border-radius: 40rpx 40rpx 0 0;
}
.content {
  display: block;
  line-height: 1.2;
  overflow: hidden;
  white-space: nowrap;
  pointer-events: auto;
  position: fixed;
  z-index: 999;
  bottom: 0;
}